" Add line numbers
set number

" Set scroll offset
set scrolloff=20

" Default indentation rules
set tabstop=2
set shiftwidth=2
set expandtab

" Set status line in every tab
set laststatus=2

" Reduce update time to reduce lag in some features
set updatetime=100

" Disable scratch preview window at top
set completeopt-=preview

" Add yank/paste from system clipboard
set clipboard=unnamedplus
